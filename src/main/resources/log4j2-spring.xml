<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <File name="MyFile" fileName="logs/app.log" append="true">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
    </File>
</Appenders>
<Loggers>
    <Root level="info">
        <AppenderRef ref="MyFile"/>
    </Root>
</Loggers>
</Configuration>
